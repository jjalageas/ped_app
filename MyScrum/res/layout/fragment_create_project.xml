<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_plain"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edit_project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/project_name"
        android:layout_alignParentRight="true"
        android:ems="10" />

    <EditText
        android:id="@+id/edit_project_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/project_repo"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/project_repo"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/project_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_project_repo"
        android:layout_marginBottom="14dp"
        android:layout_toLeftOf="@+id/edit_project_name"
        android:text="@string/project_name"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/project_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_project"
        android:layout_alignLeft="@+id/project_name"
        android:layout_marginBottom="27dp"
        android:text="@string/repository"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/create_project"
        style="@style/AppBaseTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:text="@string/create_project" />

</RelativeLayout>