<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_plain"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:textColor="#FFFFFF"
        android:text="@string/title" />

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/description"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="textMultiLine" />
    
    <EditText
        android:id="@+id/edit_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/description"
        android:layout_toRightOf="@+id/priority"
        android:ems="10"
        android:inputType="textNoSuggestions"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edit_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/difficulty"
        android:layout_toRightOf="@+id/description"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/priority"
        android:layout_alignLeft="@+id/edit_difficulty"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="103dp"
        android:text="@string/description"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description"
        android:layout_below="@+id/description"
        android:layout_marginTop="28dp"
        android:text="@string/difficulty"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/difficulty"
        android:layout_below="@+id/difficulty"
        android:layout_marginTop="30dp"
        android:text="@string/priority"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edit_priority"
        android:layout_below="@+id/edit_priority"
        android:layout_marginTop="22dp"
        android:text="@string/submit" />

</RelativeLayout>
